FILE "S8.SPR"               ' 2 0 - Sprites (exported from TinySprite)

10 COLOR15,0,0:SCREEN 2,2,0
20 SET TILE ON  
30 T1%=TIME
41 CMD WRTSPR 0         ' Load sprite resource
50 A=0


130 GOSUB 9200  ' MOSTRA JOGADOR
140 GOSUB 9100  ' GET USER INPUT
150 GOSUB 9300  ' MOVIMENTOS HEROI
160 GOTO 130




'===>GET USER INPUT
9100 K% = INKEY
9101 J% = STICK(0) OR STICK(1)
9105 RETURN

9200 PUT SPRITE 0,(0,0),15,A
9201 LOCATE 10,0:PRINT A
9202 RETURN


9300 DT%=TIME-T1%:IF DT%<7 THEN RETURN
9301 T1%=TIME:DX%=0
9302 IF J%=3  THEN A=A+1
9360 IF J%=7  THEN A=A-1
9380 RETURN
